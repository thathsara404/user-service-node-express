{
  "name": "micron-agritech-user-api",
  "version": "1.0.0",
  "description": "this is simple typescript project",
  "author": "Thathsara",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev-start": "env-cmd --no-override -e dev node ./app-dist/dev-server.js",
    "start": "env-cmd --no-override -e prod node ./app-dist/server.js",
    "watch-script": "tsc && yarn dev-start",
    "watch": "nodemon --exec yarn watch-script",
    "lint": "eslint . --ext .ts --ext .jsx --ext .js --quiet",
    "test": "jest",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(ts)?$": "ts-jest",
      "^.+\\.(js|jsx)$": [
        "babel-jest",
        {
          "configFile": "./test/.babelrc"
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.19.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "babel-jest": "^29.0.2",
    "env-cmd": "^10.1.0",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "install": "^0.13.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4",
    "ts-jest": "27.1.5",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.4",
    "winston": "^3.8.1"
  }
}
